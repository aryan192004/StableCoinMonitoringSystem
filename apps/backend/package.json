{
  "name": "@stablecoin/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:api": "nodemon api/server.ts",
    "dev:services": "uvicorn services.main:app --reload --port 8001",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:services\"",
    "build": "tsc && tsc-alias",
    "start": "concurrently \"npm:dev:api\" \"npm:dev:services\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "socket.io": "^4.6.1",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.5",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "nodemailer": "^6.9.8",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "tsc-alias": "^1.8.8",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "concurrently": "^8.2.2"
  }
}
